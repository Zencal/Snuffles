<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="PID">????</Property>
        <Property name="LOG_PATTERN">[%d{yyyy-MM-dd HH:mm:ss.SSS}] log4j2%X{context} - ${sys:PID} %5p [%t] --- %c{1}: %m%n</Property>
        <Property name="filename">logging.log</Property>
        <Property name="chatFilename">chat.log</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
        <File name="File" fileName="${filename}">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </File>
        <File name="ChatFile" fileName="${chatFilename}">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </File>
    </Appenders>
    <Loggers>
        <logger name="net.zencal" level="debug"/>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
        <logger name="chat" level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ChatFile"/>
        </logger>
    </Loggers>
</Configuration>