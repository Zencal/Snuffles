<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="net.zencal.snuffles" id="1.0.1">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="public" tableName="dubuser" />
            </not>
        </preConditions>

        <createTable tableName="dubuser" remarks="Dubtrack User">
            <column name="id" type="serial" remarks="user id">
                <constraints nullable="false" primaryKey="true" primaryKeyName="dub_user_pk"/>
            </column>

            <column name="username" type="text" remarks="username"/>
            <column name="updubsreceived" type="bigint" remarks="Total amount of updubs received"/>
            <column name="downdubsreceived" type="bigint" remarks="Total amount of downdubs received"/>
            <column name="updubsgiven" type="bigint" remarks="Total amount of updubs given"/>
            <column name="downdubsgiven" type="bigint" remarks="Total amount of downdubs given"/>
            <column name="firstseen" type="date" remarks="Date first seen"/>
            <column name="lastseen" type="date" remarks="Date last seen"/>
            <column name="timesseen" type="bigint" remarks="Times seen"/>
            <column name="dubuserid" type="text" remarks="Dub User Id"/>
        </createTable>

    </changeSet>

</databaseChangeLog>